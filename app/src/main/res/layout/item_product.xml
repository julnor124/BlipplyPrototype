<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:padding="18dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/text_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product name"
            android:textColor="@color/text_primary"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_product_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="per unit"
            android:textColor="#991A0F2E"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/text_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KSh 0.00"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:layout_marginTop="6dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_add"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Add"
        android:backgroundTint="@color/blipply_green"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_quantity"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/qty_pill_background"
        android:gravity="center_vertical"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/button_minus"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="âˆ’"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/text_quantity"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/qty_center_background"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/button_plus"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>
