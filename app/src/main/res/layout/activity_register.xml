<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blipply_green">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:src="@android:drawable/ic_media_previous"
            android:tint="@color/text_primary" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="24dp"
            android:paddingBottom="32dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create account"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set up your wholesale ordering account"
                android:textColor="#991A0F2E"
                android:textSize="15sp"
                android:layout_marginBottom="24dp" />

            <!-- Business name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business name"
                android:textColor="#B31A0F2E"
                android:textSize="15sp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputBusinessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your business name"
                android:background="@android:color/white"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="#661A0F2E"
                android:layout_marginBottom="18dp"
                android:inputType="text" />

            <!-- Email -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#B31A0F2E"
                android:textSize="15sp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="your@email.com"
                android:background="@android:color/white"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="#661A0F2E"
                android:layout_marginBottom="18dp"
                android:inputType="textEmailAddress" />

            <!-- Phone -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textColor="#B31A0F2E"
                android:textSize="15sp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="+254 700 000 000"
                android:background="@android:color/white"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="#661A0F2E"
                android:layout_marginBottom="18dp"
                android:inputType="phone" />

            <!-- Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#B31A0F2E"
                android:textSize="15sp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="••••••••"
                android:background="@android:color/white"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="#661A0F2E"
                android:layout_marginBottom="18dp"
                android:inputType="textPassword" />

            <!-- Confirm password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm password"
                android:textColor="#B31A0F2E"
                android:textSize="15sp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="••••••••"
                android:background="@android:color/white"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="#661A0F2E"
                android:layout_marginBottom="22dp"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/buttonCreateAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create account"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:backgroundTint="@color/button_primary"
                android:textColor="@color/button_primary_text" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
