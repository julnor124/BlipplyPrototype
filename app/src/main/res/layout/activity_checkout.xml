<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checkoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Top App Bar -->
    <LinearLayout
        android:id="@+id/checkoutTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blipply_green"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:src="@drawable/ic_back_simple"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/checkoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Order Total card -->
            <LinearLayout
                android:id="@+id/cardTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:padding="18dp"
                android:layout_marginBottom="16dp"
                android:elevation="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="#991A0F2E"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="KSh 0.00"
                    android:textColor="@color/text_primary"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:gravity="end" />
            </LinearLayout>

            <!-- AI Checkout Assistant (prototype UI) -->
            <LinearLayout
                android:id="@+id/cardAI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="18dp"
                android:layout_marginBottom="16dp"
                android:elevation="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AI Checkout Assistant"
                    android:textColor="@color/text_primary"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Helps choose the best payment method based on your cart and available credit."
                    android:textColor="#991A0F2E"
                    android:textSize="15sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/buttonGetSuggestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get suggestion"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/text_primary" />

                <LinearLayout
                    android:id="@+id/aiResultContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/textAiRecommendation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Credit recommended"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/textAiExplanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Explanation…"
                        android:textColor="#991A0F2E"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/buttonApplyRecommendation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apply recommendation"
                        android:backgroundTint="@color/button_primary"
                        android:textColor="@color/button_primary_text" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment method"
                android:textColor="@color/text_primary"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp" />

            <!-- Advance payment option -->
            <LinearLayout
                android:id="@+id/optionAdvance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="18dp"
                android:layout_marginBottom="12dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Advance payment"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pay now before delivery"
                            android:textColor="#801A0F2E"
                            android:textSize="15sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/radioAdvance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- Credit option -->
            <LinearLayout
                android:id="@+id/optionCredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="18dp"
                android:layout_marginBottom="12dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Credit"
                        android:textColor="@color/text_primary"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioCredit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Available credit"
                            android:textColor="#801A0F2E"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textAvailableCredit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KSh 5000.00"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Used credit"
                            android:textColor="#801A0F2E"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textUsedCredit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KSh 1250.00"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Remaining"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textRemainingCredit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KSh 3750.00"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- On site payment option -->
            <LinearLayout
                android:id="@+id/optionOnsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="18dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="On site payment"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pay on delivery"
                            android:textColor="#801A0F2E"
                            android:textSize="15sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/radioOnsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom button -->
    <LinearLayout
        android:id="@+id/bottomButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:elevation="6dp">

        <Button
            android:id="@+id/buttonPlaceOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place order"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:backgroundTint="#331A0F2E"
            android:textColor="#661A0F2E"
            android:enabled="false" />
    </LinearLayout>

</LinearLayout>
